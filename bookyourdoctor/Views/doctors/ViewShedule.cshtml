@model bookyourdoctor.doctor
@{
    ViewBag.Title = "ViewShedule";
}
<head>
    <style type="text/css">

        body {
            background-image: url(../images/den.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            height: 500px;
        }

        .registration {
            color: black;
            font-size: 40px;
            font-family: Agency FB;
            font-weight: 700;
            border-bottom-style: ridge;
        }

        .row {
        }

        .btn.hover {
            background-color: aqua;
        }

        label {
            font-size: 22px;
        }

        .btn-danger {
            border-radius: 0px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3" id=" form" style=" background-color: #acbdca;height:100% 100%;opacity:0.9;

    ">
                <center style="text-align:center ;
	padding-top: 60px;padding-bottom:60px"><b class="registration">VIEW SCHEDULE</b></center>
                @{
        doctor_scedule dg = new doctor_scedule();
        IEnumerable<doctor_scedule> lst = dg.doctorsspec(Model.doctor_id);
                }

                @using (Html.BeginForm())
    {
            @Html.AntiForgeryToken()

            <p>CLINIC NAME:@Html.DisplayFor(modelItem => Model.clinic_name)</p><br>
            <p>CLINIC ADDRESS:@Html.DisplayFor(modelItem => Model.clinic_address)</p><br>



            <table class="table table-bordered table-condensed">
                <tbody>
                    <tr>
                        <th style="font-family:Arial;font-size:24px">DAY</th>
                        <th style="font-family:Arial;font-size:24px">CLINIC OPEN TIME</th>
                        <th style="font-family:Arial;font-size:24px">CLINIC CLOSE TIME</th>
                        <th style="font-family:Arial;font-size:24px">APPOITMENT</th>
                    </tr>
                    @foreach (var item in lst.ToList())
        {
            <tr>
                <td style="font-family:Arial;font-size:24px">@Html.DisplayFor(modelItem => item.Clinic_day)</td>
                <td style="font-family:Arial;font-size:24px">@Html.DisplayFor(modelItem => item.clinic_start_time)</td>
                <td style="font-family:Arial;font-size:24px">@Html.DisplayFor(modelItem => item.clinic_end_time)</td>
                <td style="font-family:Arial;font-size:24px"><button type="button" onclick="alert('Your request has been placed. Please wait for your response on your Email')">Take Appoitment</button></td>
            </tr>

}
                </tbody>
            </table>

            <p>HOSPITAL NAME:@Html.DisplayFor(modelItem => Model.hospital_name)</p><br>
            <p>HOSPITAL ADDRESS:@Html.DisplayFor(modelItem => Model.hospital_address)</p><br>



            <table class="table table-bordered table-condensed">
                <tbody>
                    <tr>
                        <th style="font-family:Arial;font-size:24px">DAY</th>
                        <th style="font-family:Arial;font-size:24px">HOSPITAL OPEN TIME</th>
                        <th style="font-family:Arial;font-size:24px">HOSPITAL CLOSE TIME</th>
                        <th style="font-family:Arial;font-size:24px">APPOITMENT</th>
                    </tr>
                    @foreach (var item in lst.ToList())
        {
            <tr>
                <td style="font-family:Arial;font-size:24px">@Html.DisplayFor(modelItem => item.hospial_day)</td>
                <td style="font-family:Arial;font-size:24px">@Html.DisplayFor(modelItem => item.hospital_start_time)</td>
                <td style="font-family:Arial;font-size:24px">@Html.DisplayFor(modelItem => item.hospital_end_time)</td>
                <td style="font-family:Arial;font-size:24px"><button type="button" onclick="alert('Your request has been placed. Please wait for your response on your Email')">Take Appoitment</button></td>
            </tr>

}
                </tbody>
            </table>
}

            </div>
        </div>
    </div>
</body>

